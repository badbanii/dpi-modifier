<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEEEE">

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/button_back"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/button_quit"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_shut_down"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/google_sans_text_bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button_back"
        />

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/cardview_row_1"
        style="@style/Widget.Neumorph.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:neumorph_shapeType="pressed">

        <RelativeLayout
            android:id="@+id/layout_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/button_rate"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_star"
                android:layout_centerHorizontal="true"
                app:neumorph_shapeType="basin" />

            <TextView
                android:id="@+id/textview_rate"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_rate"
                android:layout_centerHorizontal="true"
                android:text="Rate"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/google_sans_text_bold"
                />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/button_more_apps"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_droid"
                app:neumorph_shapeType="basin"
                android:layout_toEndOf="@id/button_rate"/>

            <TextView
                android:id="@+id/textview_more_apps"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_rate"
                android:layout_toEndOf="@id/textview_rate"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Apps"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/google_sans_text_bold"
                />


            <TextView
                android:id="@+id/textview_share"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_rate"
                android:layout_toStartOf="@id/button_rate"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Share"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/google_sans_text_bold"
                />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/button_share"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_share"
                app:neumorph_shapeType="basin"
                android:layout_toStartOf="@id/button_rate"/>


        </RelativeLayout>

    </soup.neumorphism.NeumorphCardView>

</androidx.constraintlayout.widget.ConstraintLayout>