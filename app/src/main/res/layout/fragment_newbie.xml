<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEEEE">

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/button_back"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/button_settings"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/button_reset"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_reset"
        app:layout_constraintTop_toBottomOf="@id/button_settings"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textview_dpi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/google_sans_text"
        app:layout_constraintTop_toBottomOf="@id/textview_dpi_val"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="DPI"
        android:textSize="20sp"
        android:textColor="#838383"
        />

    <TextView
        android:fontFamily="@font/google_sans_text_bold_italic"
        android:id="@+id/textview_dpi_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="200"
        android:textSize="70sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/textview_actions_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textview_dpi_title"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/google_sans_text"
        android:layout_marginStart="10dp"
        android:text="actions"
        android:textSize="20sp"
        android:textColor="#838383"
        android:layout_marginTop="60dp"
        />

    <LinearLayout
        android:id="@+id/layout_modes_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/textview_actions_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">

    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_add"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:fontFamily="@font/google_sans_text_bold"
        android:drawablePadding="8dp"
        android:text="+5 DPI"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_weight="1"
        app:drawableStartCompat="@drawable/ic_add" />
    <soup.neumorphism.NeumorphButton
        android:id="@+id/button_substract"
        android:fontFamily="@font/google_sans_text_bold"
        android:layout_weight="1"
        android:textSize="18sp"
        style="@style/Widget.Neumorph.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:textAlignment="center"
        android:text="-5 DPI"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/ic_substract"
        />
</LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>